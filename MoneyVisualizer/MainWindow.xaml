<Window x:Class="MoneyVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyVisualizer"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.CommandBindings>
        <CommandBinding Command="Open" CanExecute="OpenCommand_CanExecute" Executed="OpenCommand_Executed" />
    </Window.CommandBindings>
    <Grid>
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button Command="Open" Content="Open" />
                </ToolBar>
            </ToolBarTray>
            <TabControl >
                <TabItem Header="Line Graph">
                    <d3:ChartPlotter Name="plotter" Visibility="Hidden">
                        <d3:ChartPlotter.HorizontalAxis>
                            <d3:HorizontalDateTimeAxis Name="dateAxis" />
                        </d3:ChartPlotter.HorizontalAxis>
                        <d3:ChartPlotter.VerticalAxis>
                            <d3:VerticalIntegerAxis Name="balanceAxis"/>
                        </d3:ChartPlotter.VerticalAxis>

                        <d3:VerticalAxisTitle FontFamily="Georgia" Content="Account Balance" />
                        <d3:HorizontalAxisTitle FontFamily="Georgia" Content="Date" />
                        <d3:LineGraph Name="graph" DataSource="{Binding Data}"/>
                    </d3:ChartPlotter>
                </TabItem>
                <TabItem Header="Pie Chart">

                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
